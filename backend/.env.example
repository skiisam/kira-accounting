# TRAE Accounting - Environment Configuration

# Server
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/trae_accounting?schema=public"

# Database (SQL Server - alternative)
# DATABASE_URL="sqlserver://localhost:1433;database=trae_accounting;user=sa;password=YourPassword;trustServerCertificate=true"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@traeaccounting.com

# Company Defaults
DEFAULT_CURRENCY=MYR
DEFAULT_TAX_CODE=SR
DEFAULT_TAX_RATE=6

# Feature Flags
ENABLE_MULTI_CURRENCY=true
ENABLE_MULTI_LOCATION=true
ENABLE_BATCH_TRACKING=true
ENABLE_SERIAL_TRACKING=true
