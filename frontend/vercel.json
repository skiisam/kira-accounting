{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "build": {
    "env": {
      "VITE_API_URL": "https://kira-api-n3lo.onrender.com/api/v1"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://kira-api-n3lo.onrender.com/api/:path*"
    },
    {
      "source": "/((?!assets|favicon).*)",
      "destination": "/index.html"
    }
  ]
}
